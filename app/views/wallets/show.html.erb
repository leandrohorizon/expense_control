<table class="table">
  <thead>
    <tr>
      <th scope="col">Descrição</th>
      <th scope="col">Valor</th>
      <th scope="col">Tipo de ocorrência</th>
      <th scope="col">Data</th>
    </tr>
  </thead>
  <tbody>
    <% @historics.each_with_index do |historic, index| %>
      <tr>
        <th scope="row"><%= index + 2 %></th>
        <td><%= historic.description %></td>
        <td><%= historic.amount_cents %></td>
        <td><%= historic.occurrence_type %></td>
        <td><%= historic.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>